extends base

prepend window_title
  
  = titlecase(page.category)
  | &mdash;

block content
  header
    h2= titlecase(page.category)

  ul.article-list
    - page.posts.each(function(article){
      li
        article
          h3
            a(href=url_for(article.path))= article.title
          div.meta
            include _partial/article_meta
            +date(article.date)
            +category(article.categories)
    - })
